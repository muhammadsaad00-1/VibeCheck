<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set the solid color of the circle -->
    <solid android:color="@color/lavender" />

    <!-- Optional: Add a border to the circle -->
    <stroke
        android:width="2dp"
        android:color="@color/purple_700" />

    <!-- Optional: Add padding inside the circle -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
