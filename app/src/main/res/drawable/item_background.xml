<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Default background color -->
            <corners android:radius="8dp" />  <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Border -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3E3FC" /> <!-- Background color when pressed -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#3388FF" />
        </shape>
    </item>
</selector>
