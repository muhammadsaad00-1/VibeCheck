<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header Image -->

        <!-- Title --> <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />


        <!-- Subheading -->
        <ImageView
            android:id="@+id/img_about_us"
            android:layout_width="169dp"
            android:layout_height="184dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle1"
            android:contentDescription="About Us Image"
            android:scaleType="centerCrop"
            android:src="@drawable/vc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Mission"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Mission Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our CareVibe app falls within the domain of health management and
wellness technology. It aims to provide a digital platform for users to
manage their personal health, preventive care, fitness, nutrition,
medication, and mental well-being. The app integrates health tracking,
medical record management, and communication with healthcare providers
into a unified experience."
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Decorative Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Team Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet the Team"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Team Members -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle1"
                android:contentDescription="Team Member"
                android:src="@drawable/al" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/sd"
                android:contentDescription="Team Member"
                android:layout_margin="8dp"
                android:textSize="24sp"
                android:background="@drawable/circle1" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView

                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white"
                android:padding="12dp"
                android:text="Contact us Via Email:
                             support_carevibe@gmail.com"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>