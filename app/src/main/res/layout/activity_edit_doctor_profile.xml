<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"> <!-- Light background color for the layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            android:contentDescription="Profile Image"
            android:layout_marginBottom="20dp" />

        <!-- Upload Button -->
        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Picture"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_background"
            android:layout_marginBottom="16dp"
            />

        <!-- Input Fields -->
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bioEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Biography"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Address"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/specialtyEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Specialty"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Adding the missing Location field -->
        <EditText
            android:id="@+id/loci"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Location"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/experienceEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Experience (Years)"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ratingEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Rating"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/websiteEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Website"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/patientsEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Patients Treated"
            android:paddingLeft="15dp"
            android:background="@drawable/edt_background"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_background"
            android:layout_marginBottom="20dp"
            />

        <!-- Back Button -->
        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_background"
            />

    </LinearLayout>
</ScrollView>
